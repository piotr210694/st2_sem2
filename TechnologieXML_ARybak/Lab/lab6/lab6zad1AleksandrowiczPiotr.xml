<math xmlns="http://www.w3.org/1998/Math/MathML">
	<naglowek>Podstawowe wzory maturalne</naglowek>
	<opis_strony>Poniżej zostały przedstawione wzory, które najczęściej przydają się podczas egzaminu maturalnego.</opis_strony>
	<zagadnienie>
		<tytul>1. WARTOŚĆ BEZWZGLĘDNA LICZBY</tytul>
		<links xmlns:xlink="http://www.w3.org/1999/xlink">
			<link xlink:type="simple" xlink:show="new" xlink:href="https://www.matemaks.pl/wartosc-bezwzgledna.html">Więcej...</link>
		</links>
		<opis>Wartość bezwzględną liczby rzeczywistej x definiujemy wzorem:</opis>
		<wzor>
			<mfenced open="|" close="|">
				<mi>x</mi>
			</mfenced>
			<mo>=</mo>
			<mi>x</mi>
			<mo>&#xA0;</mo>
			<mi>d</mi>
			<mi>l</mi>
			<mi>a</mi>
			<mo>&#xA0;</mo>
			<mi>x</mi>
			<mo>&#x2265;</mo>
			<mn>0</mn>
			<mo>&#xA0;</mo>
		</wzor>
		<wzor>
			<mfenced open="|" close="|">
				<mi>x</mi>
			</mfenced>
			<mo>=</mo>
			<mo>-</mo>
			<mi>x</mi>
			<mo>&#xA0;</mo>
			<mi>d</mi>
			<mi>l</mi>
			<mi>a</mi>
			<mo>&#xA0;</mo>
			<mi>x</mi>
			<mo>&lt;</mo>
			<mn>0</mn>
			<mo>&#xA0;</mo>
		</wzor>
	</zagadnienie>
	<zagadnienie>
		<tytul>2. POTĘGI I PIERWIASTKI</tytul>
		<links xmlns:xlink="http://www.w3.org/1999/xlink">
			<link xlink:type="simple" xlink:show="new" xlink:href="https://www.matemaks.pl/potegowanie-i-pierwiastkowanie.html">Więcej...</link>
		</links>
		<opis>Niech m, n będą liczbami całkowitymi dodatnimi. Definiujemy:</opis>
		<wzor>
			<mi>d</mi>
			<mi>l</mi>
			<mi>a</mi>
			<mo>&#xA0;</mo>
			<mi>a</mi>
			<mo>&#x2260;</mo>
			<mn>0</mn>
			<mo>:</mo>
			<mo>&#xA0;</mo>
			<mo>&#xA0;</mo>
			<msup>
				<mi>a</mi>
				<mrow>
					<mo>-</mo>
					<mi>n</mi>
				</mrow>
			</msup>
			<mo>=</mo>
			<mfrac>
				<mn>1</mn>
				<msup>
					<mi>a</mi>
					<mi>n</mi>
				</msup>
			</mfrac>
			<mo>&#xA0;</mo>
			<mi>o</mi>
			<mi>r</mi>
			<mi>a</mi>
			<mi>z</mi>
			<mo>&#xA0;</mo>
			<msup>
				<mi>a</mi>
				<mn>0</mn>
			</msup>
			<mo>=</mo>
			<mn>1</mn>
		</wzor>
		<wzor>
			<mi>d</mi>
			<mi>l</mi>
			<mi>a</mi>
			<mo>&#xA0;</mo>
			<mi>a</mi>
			<mo>&#x2265;</mo>
			<mn>0</mn>
			<mo>:</mo>
			<mo>&#xA0;</mo>
			<mo>&#xA0;</mo>
			<msup>
				<mi>a</mi>
				<mfrac>
					<mi>m</mi>
					<mi>n</mi>
				</mfrac>
			</msup>
			<mo>=</mo>
			<mroot>
				<msup>
					<mi>a</mi>
					<mi>m</mi>
				</msup>
				<mi>n</mi>
			</mroot>
		</wzor>
		<wzor>
			<mi>d</mi>
			<mi>l</mi>
			<mi>a</mi>
			<mo>&#xA0;</mo>
			<mi>a</mi>
			<mo>&gt;</mo>
			<mn>0</mn>
			<mo>:</mo>
			<mo>&#xA0;</mo>
			<mo>&#xA0;</mo>
			<msup>
				<mi>a</mi>
				<mrow>
					<mo>-</mo>
					<mfrac>
						<mi>m</mi>
						<mi>n</mi>
					</mfrac>
				</mrow>
			</msup>
			<mo>=</mo>
			<mfrac>
				<mn>1</mn>
				<mroot>
					<msup>
						<mi>a</mi>
						<mi>m</mi>
					</msup>
					<mi>n</mi>
				</mroot>
			</mfrac>
		</wzor>
	</zagadnienie>
	<zagadnienie>
		<tytul>3. WZÓR DWUMIANOWY NEWTONA</tytul>
		<links xmlns:xlink="http://www.w3.org/1999/xlink">
			<link xlink:type="simple" xlink:show="new" xlink:href="https://pl.wikipedia.org/wiki/Dwumian_Newtona">Więcej...</link>
		</links>
		<opis>Dla dowolnej liczby całkowitej dodatniej n oraz dla dowolnych liczb a, b mamy:</opis>
		<wzor>
			<msup>
				<mfenced>
					<mrow>
					<mi>a</mi>
					<mo>+</mo>
					<mi>b</mi>
					</mrow>
				</mfenced>
				<mi>n</mi>
			</msup>
			<mo>=</mo>
			<mfenced>
				<mtable>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
					<mtr>
						<mtd>
							<mn>0</mn>
						</mtd>
					</mtr>
				</mtable>
			</mfenced>
			<msup>
				<mi>a</mi>
				<mi>n</mi>
			</msup>
			<mo>+</mo>
			<mfenced>
				<mtable>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
					<mtr>
						<mtd>
							<mn>1</mn>
						</mtd>
					</mtr>
				</mtable>
			</mfenced>
			<msup>
				<mi>a</mi>
				<mrow>
					<mi>n</mi>
					<mo>-</mo>
					<mn>1</mn>
				</mrow>
			</msup>
			<mi>b</mi>
			<mo>+</mo>
			<mo>.</mo>
			<mo>.</mo>
			<mo>.</mo>
			<mo>+</mo>
			<mfenced>
				<mtable>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
					<mtr>
						<mtd>
							<mi>k</mi>
						</mtd></mtr>
				</mtable>
			</mfenced>
			<msup>
				<mi>a</mi>
				<mrow>
					<mi>n</mi>
					<mo>-</mo>
					<mi>k</mi>
				</mrow>
			</msup>
			<msup>
				<mi>b</mi>
				<mi>k</mi>
			</msup>
			<mo>+</mo>
			<mo>.</mo>
			<mo>.</mo>
			<mo>.</mo>
			<mo>+</mo>
			<mfenced>
				<mtable>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
					<mtr>
						<mtd>
							<mi>n</mi>
							<mo>-</mo>
							<mn>1</mn>
						</mtd>
					</mtr>
				</mtable>
			</mfenced>
			<mi>a</mi>
			<msup>
				<mi>b</mi>
				<mrow>
					<mi>n</mi>
					<mo>-</mo>
					<mn>1</mn>
				</mrow>
			</msup>
			<mo>+</mo>
			<mfenced>
				<mtable>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
					<mtr>
						<mtd>
							<mi>n</mi>
						</mtd>
					</mtr>
				</mtable>
			</mfenced>
			<msup>
			<mi>b</mi>
			<mi>n</mi>
			</msup>
		</wzor>
	</zagadnienie>
	<zagadnienie>
		<tytul>4. WZORY SKRÓCONEGO MNOŻENIA</tytul>
		<links xmlns:xlink="http://www.w3.org/1999/xlink">
			<link xlink:type="simple" xlink:show="new" xlink:href="http://matematyka.pisz.pl/strona/55.html">Więcej...</link>
		</links>
		<opis>Dla dowolnych liczb a, b:</opis>
		<wzor>
			<msup>
				<mfenced>
					<mrow>
						<mi>a</mi>
						<mo>+</mo>
						<mi>b</mi>
					</mrow>
				</mfenced>
				<mn>2</mn>
			</msup>
				<mo>=</mo>
			<msup>
				<mi>a</mi>
				<mn>2</mn>
			</msup>
			<mo>+</mo>
			<mn>2</mn>
			<mi>a</mi>
			<mo>+</mo>
			<msup>
				<mi>b</mi>
				<mn>2</mn>
			</msup>
		</wzor>
		<wzor>
			<msup>
				<mfenced>
					<mrow>
						<mi>a</mi>
						<mo>-</mo>
						<mi>b</mi>
					</mrow>
				</mfenced>
			<mn>2</mn>
			</msup>
			<mo>=</mo>
			<msup>
				<mi>a</mi>
				<mn>2</mn>
			</msup>
			<mo>-</mo>
			<mn>2</mn>
			<mi>a</mi>
			<mi>b</mi>
			<mo>+</mo>
			<msup>
				<mi>b</mi>
				<mn>2</mn>
			</msup>
		</wzor>
		<wzor>
			<msup>
				<mfenced>
					<mrow>
						<mi>a</mi>
						<mo>+</mo>
						<mi>b</mi>
					</mrow>
				</mfenced>
				<mn>3</mn>
			</msup>
			<mo>=</mo>
			<msup>
				<mi>a</mi>
				<mn>3</mn>
			</msup>
			<mo>+</mo>
			<mn>3</mn>
			<msup>
				<mi>a</mi>
				<mn>2</mn>
			</msup>
			<mi>b</mi>
			<mo>+</mo>
			<mn>3</mn>
			<mi>a</mi>
			<msup>
				<mi>b</mi>
				<mn>2</mn>
			</msup>
			<mo>+</mo>
			<msup>
				<mi>b</mi>
				<mn>3</mn>
			</msup>
		</wzor>			
		<wzor>
			<msup>
				<mfenced>
					<mrow>
						<mi>a</mi>
						<mo>+</mo>
						<mi>b</mi>
					</mrow>
				</mfenced>
				<mn>3</mn>
			</msup>
			<mo>=</mo>
			<msup>
				<mi>a</mi>
				<mn>3</mn>
			</msup>
			<mo>-</mo>
			<mn>3</mn>
			<msup>
				<mi>a</mi>
				<mn>2</mn>
			</msup>
			<mi>b</mi>
			<mo>+</mo>
			<mn>3</mn>
			<mi>a</mi>
			<msup>
				<mi>b</mi>
				<mn>2</mn>
			</msup>
			<mo>-</mo>
			<msup>
				<mi>b</mi>
				<mn>3</mn>
			</msup>
		</wzor>
	</zagadnienie>
	<zagadnienie>
	<head>
		<tytul>5. FUNKCJA KWADRATOWA</tytul>
		</head>
		<links xmlns:xlink="http://www.w3.org/1999/xlink">
			<link xlink:type="simple" xlink:show="new" xlink:href="https://www.matemaks.pl/funkcja-kwadratowa.html">Więcej...</link>
		</links>
		<opis>Postać ogólna funkcji kwadratowej:</opis>
		<wzor>
			<mi>f</mi>
			<mo>(</mo>
			<mi>x</mi>
			<mo>)</mo>
			<mo>=</mo>
			<mi>a</mi>
			<msup>
				<mi>x</mi>
				<mn>2</mn>
			</msup>
			<mo>+</mo>
			<mi>b</mi>
			<mi>x</mi>
			<mo>+</mo>
			<mi>c</mi>
			<mo>,</mo>
			<mo>&#xA0;</mo>
			<mi>a</mi>
			<mo>&#x2260;</mo>
			<mn>0</mn>
			<mo>,</mo>
			<mo>&#xA0;</mo>
			<mi>x</mi>
			<mo>&#x2208;</mo>
			<mi>R</mi>
		</wzor>
		<opis>Wzór każdej funkcji kwadratowej można doprowadzić do postaci kanonicznej:</opis>
		<wzor>
		   <mi>f</mi>
		   <mo>(</mo>
		   <mi>x</mi>
		   <mo>)</mo>
		   <mo>=</mo>
		   <mi>a</mi>
		   <mo>(</mo>
		   <mi>x</mi>
		   <mo>-</mo>
		   <mi>p</mi>
		   <msup>
			  <mo>)</mo>
			  <mn>2</mn>
		   </msup>
		   <mo>+</mo>
		   <mi>q</mi>
		   <mo>,</mo>
		   <mo>&#xA0;</mo>
		   <mi>g</mi>
		   <mi>d</mi>
		   <mi>z</mi>
		   <mi>i</mi>
		   <mi>e</mi>
		   <mo>&#xA0;</mo>
		   <mi>p</mi>
		   <mo>=</mo>
		   <mo>-</mo>
		   <mfrac>
			  <mi>b</mi>
			  <mrow>
				 <mn>2</mn>
				 <mi>a</mi>
			  </mrow>
		   </mfrac>
		   <mo>,</mo>
		   <mo>&#xA0;</mo>
		   <mi>q</mi>
		   <mo>=</mo>
		   <mfrac>
			  <mo>&#x25B3;</mo>
			  <mrow>
				 <mn>4</mn>
				 <mi>a</mi>
			  </mrow>
		   </mfrac>
		   <mo>,</mo>
		   <mo>&#xA0;</mo>
		   <mo>&#x25B3;</mo>
		   <mo>=</mo>
		   <msup>
			  <mi>b</mi>
			  <mn>2</mn>
		   </msup>
		   <mo>-</mo>
		   <mn>4</mn>
		   <mi>a</mi>
		   <mi>c</mi>
		</wzor>
		<wzor>
		   <msub>
			  <mi>x</mi>
			  <mn>1</mn>
		   </msub>
		   <mo>=</mo>
		   <mfrac>
			  <mrow>
				 <mo>-</mo>
				 <mi>b</mi>
				 <mo>-</mo>
				 <msqrt>
					<mo>&#x25B3;</mo>
				 </msqrt>
			  </mrow>
			  <mrow>
				 <mn>2</mn>
				 <mi>a</mi>
			  </mrow>
		   </mfrac>
		</wzor>
		<wzor>
		   <msub>
			  <mi>x</mi>
			  <mn>2</mn>
		   </msub>
		   <mo>=</mo>
		   <mfrac>
			  <mrow>
				 <mo>-</mo>
				 <mi>b</mi>
				 <mo>+</mo>
				 <msqrt>
					<mo>&#x25B3;</mo>
				 </msqrt>
			  </mrow>
			  <mrow>
				 <mn>2</mn>
				 <mi>a</mi>
			  </mrow>
		   </mfrac>
		</wzor>
	</zagadnienie>
</math>

